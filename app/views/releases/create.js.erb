// Release Creation
/*
 * 1. hide form
 * 2. flash success
 */ 


var flash = $('<div>');

var newRelease = {
  name: "<%= j(@release.name) %>",
  id: <%= @release.id %>
};

<% if @release.errors.any? %>
    $('.modal-body').html('<%= j(render 'form', release: @release, remote: true) %>');  
<% else %>
  $('button[data-dismiss="modal"]').click();
  flash.attr('class', 'alert alert-success').html('<%= j @release.name %> created!');
<% end %>

flash.append( $('<button>').attr('class', 'close').attr('data-dismiss', 'alert').html('&times;') );

$('nav').after(flash);

// TODO: Make sure this only adds to the appropriate section: table for index, list for options

$('tbody.releases').prepend( $('<%= j(render 'release', release: @release) %>') );
