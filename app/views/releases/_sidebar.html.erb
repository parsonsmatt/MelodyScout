<aside class='col-md-3 col-md-pull-6'>
  <h2>Release</h2>
  <table class='table'>
    <% { "Name" => @release.name,
         "Picture" => image_tag("release.png", size: "50x50", alt: @release.name),
         "Description" => @release.description,
         "Date" => @release.release_dates.first.date,
         "Artists" => @release.artists.count,
    }.each do |text, item| %>
    <tr>
      <td><strong><%= text %>:</strong></td>
      <td id="sidebar-<%=text.downcase%>"><%= item %></td>
    </tr>
  <% end %>
  </table>
  <%= link_to 'Edit', edit_release_path(@release) if logged_in? %>
</aside>
