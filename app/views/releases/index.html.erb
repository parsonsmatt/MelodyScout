<div class="row">
  <h1>Releases</h1>
</div>
<div class='row'>
  <div class="col-md-8 col-md-offset-2">

    <center><p><%= link_to 'New Release', new_release_path, class: 'btn btn-primary'%></p>
      <p><%= link_to 'Ajax Time', new_release_path, remote: true, class: 'btn btn-primary' %></p></center>
    <table class='table'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody class="releases">
      <%= render @releases %>
      </tbody>
    </table>
  </div>
  <%= render 'shared/ads' %>
</div>

