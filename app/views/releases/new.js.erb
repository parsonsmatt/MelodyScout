// GET releases/new --> returns modal form and submits over ajax

/*
 * 1. Generate form
 * 2. Generate containing div
 * 3. Place containing div
 */


var MelodyScout = MelodyScout || {};
var MelodyScout.releases = MelodyScout.releases || {};

MelodyScout.releases.generateFormHtml = function() {
  return '<%= escape_javascript(render "js_new_form", release: @release) %>';
};

(function() {

  console.log('receiving releases/new.js.erb');

  $('body').append( $( MelodyScout.generateFormHtml() ) );
})();
