<%= form_for(@release) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <strong>Release Dates:</strong>
  <div id="release_dates">
    <ul class="nested_form release_dates">
      <%= f.fields_for :release_dates do |rd_fields| %>
        <%= render 'release_date_fields', f: rd_fields %>
      <% end %>
      <li>
        <div class="links">
          <%= link_to_add_association 'Add Release Date', f, :release_dates %>
        </div>
      </li>
    </ul>
  </div>

  <strong>Contributions:</strong>
  <div id="contributions">
    <ul class="nested_form contributions">
      <%= f.fields_for :contributions do |ff| %>
        <%= render 'contribution_fields', f: ff %>
      <% end %>
      <li>
        <div class="links">
          <%= link_to_add_association 'Add Contribution', f, :contributions %>
        </div>
      </li>
    </ul>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
  
<% end %>
