<%= form_for(@release) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.fields_for @release.release_dates.build do |rd| %>
    
    <%= rd.label :date %>
    <%= rd.date_field :date %>
  <% end %>

  <%= f.submit 'Submit', class: 'btn btn-primary' %>
  
<% end %>
