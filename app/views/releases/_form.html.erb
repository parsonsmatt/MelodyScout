<%= form_for(@release) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <strong>Release Dates:</strong>
  <ul class="nested_form release_dates">
    <%= f.fields_for :release_dates do |ff| %>
      <li class="release_date" id="release_date_<%=ff.object.id%>">
        <%= ff.label :date %>
        <%= ff.date_field :date %>
        <%= ff.label :country %>
        <%= ff.text_field :country %>
        <%= ff.hidden_field :id %>
        <%= ff.label :_destroy %>
        <%= ff.check_box :_destroy %>
      </li>
    <% end %>
    <li id="add-date">
      <%= link_to 'Add Release Date', new_release_release_date_path(@release), remote: true %>
    </li>
  </ul>
  
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
  
<% end %>
