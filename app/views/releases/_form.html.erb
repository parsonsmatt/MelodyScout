<%= form_for(@release) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <strong>Release Dates:</strong>
  <div id="release_dates">
    <ul class="nested_form release_dates">
      <%= f.fields_for :release_dates do |rd_fields| %>
        <li>
          <%= render 'release_dates_fields', f: rd_fields %>
        </li>
      <% end %>
      <li>
        <div class="links">
          <%= link_to_add_association 'Add Release Date', f, :release_dates %>
        </div>
      </li>
    </ul>
  </div>
  
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
  
<% end %>
