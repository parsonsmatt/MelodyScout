<%= form_for(@release) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name %>
  
  
    <%= f.label :description %>
    <%= f.text_area :description %>
  
  
    <%= f.label :date %>
    <%= f.date_select :date %>
  
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  
<% end %>
