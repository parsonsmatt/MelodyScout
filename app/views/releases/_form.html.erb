<% remote ||= false %>
<%= form_for(@release, remote: remote ) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= render 'release_dates_form', f: f %>
  <%= render 'contributions_form', f: f unless defined? no_contributions %>
 
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
  
<% end %>
