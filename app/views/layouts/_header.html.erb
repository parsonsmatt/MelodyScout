<%= nav_bar fixed: :top, inverse: true, responsive: true, brand: "MelodyScout" do %>

  <%= menu_group pull: :right do %>
    <%= menu_item 'Home', root_path %>
    <%= menu_item 'Artists', artists_path %>
    <%= menu_item 'Releases', releases_path %>

    <% if logged_in? %>
      <%= menu_item 'Profile', user_path(current_user) %>
      <%= menu_item 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= menu_item 'Log in', login_path %>
      <%= menu_item 'Register', register_path %>
    <% end %>
  <% end %>
<% end %>
