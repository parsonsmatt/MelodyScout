<h1>Contributions Index:</h1>
<table>
  <thead>
    <tr>
      <th>Artist:</th>
      <th>Release:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @contributions.each do |contrib| %>
      <tr>
        <td><%= link_to contrib.artist.name, artist_path(contrib.artist.id) %></td>
        <td><%= link_to contrib.release.name, release_path(contrib.release.id) %></td>
        <td><%= link_to 'Show', contrib %></td>
        <td><%= link_to 'Edit', edit_contribution_path(contrib)%></td>
        <td><%= link_to 'Destroy', contrib, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contribution', new_contribution_path %>
