<% if !@artist.nil? %>
  <%= form_for @contribution, url: artist_contributions_path(@artist) do |f| %>
    <%= hidden_field_tag :artist, @artist %>
    <%= f.label :release %>
    <%= f.select :release, Release.all.collect { |r| [r.name, r.id] } %>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
<% end %>

