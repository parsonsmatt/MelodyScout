<h1>Members of <%= @artist.name %>:</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Role</th>
    <th>Link</th>
  </tr>
  <% @members.each do |m| %> 
    <tr>
      <td><%= m.name %></td>
      <td>(eventual role)</td>
      <td><%= link_to 'Show', artist_path(m) %></td>
    </tr>
  <% end %>
    <tr>
      <td colspan='3'><%= link_to 'Add member!', '#' %></td>
    </tr>
</table>
