<p id="notice"><%= notice %></p>

<div class='row'>
  <div class='col-md-3'>
    <p>
      (eventual picture)
    </p>

    <p>
      <strong>Name:</strong>
      <%= @artist.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @artist.description %>
    </p>

    <p>
      <strong>Followers:</strong>
      <%= @artist.followers.count %>
    </p>
    <%= render 'follow_form' if logged_in? %>
    <%= link_to 'Edit', edit_artist_path(@artist) %> |
    <%= link_to 'Back', artists_path %>
  </div>
  <div class='col-md-6'>

    <%= render 'releases' if @artist.has_releases? %>

    <%= render 'members' if @artist.has_members? %>
    
    <%= render 'bands' if @artist.has_bands? %>

  </div>
</div>
