<script src='_selectize.js'>
</script>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@artist) do |f| %>
      <%= render 'shared/error_messages', object: @artist %>

      <%= f.label :name %><br>
      <%= f.text_field :name %>
      <%= f.label :description %><br>
      <%= f.text_area :description %>

      <strong>Contributions:</strong>
      <div id="contributions">
        <ul class="nested_form contributions">
          <%= f.fields_for :contributions do |ff| %>
            <%= render 'contribution_fields', f: ff %>
          <% end %>
          <li>
          <div class="links">
            <%= link_to_add_association 'Add Contribution', f, :contributions %>
          </div>
          </li>
        </ul>
      </div>

      <%= f.label :individual, class: 'checkbox inline' do %>
        <%= f.check_box :individual %>
        <span>Is this artist an individual?</span>
      <% end %>

      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
