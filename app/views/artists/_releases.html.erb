<h2>Releases:</h2>
<table class='table'>
  <thead>
    <tr>
      <th>Release</th>
      <th>Role</th>
    </tr>
  </thead>
  <% @artist.contributions.each do |c| %>
    <tr>
      <td><%= link_to c.release.name, release_path(c.release) %></td>
      <td><%= c.role %></td>
    </tr>
  <% end %>
</table>
